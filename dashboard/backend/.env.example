# Backend Environment Configuration
# Copy to .env and configure

# Environment
ENVIRONMENT=development
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Cognition Engine
COGNITION_UPDATE_INTERVAL=0.1  # 100ms = 10Hz
COGNITION_FIELD_SIZE=100

# Training
TRAINING_METRICS_RETENTION=1000  # Keep last N metrics

# Governance
GOVERNANCE_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Database (future)
# DATABASE_URL=postgresql://user:pass@localhost/quadra

# Redis (future)
# REDIS_URL=redis://localhost:6379

# Authentication (future)
# JWT_SECRET=your-secret-key
# JWT_ALGORITHM=HS256
# JWT_EXPIRATION=3600
